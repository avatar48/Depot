<!DOCTYPE html>
<html>
<head>
  <title>AsterConsole</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= controller.controller_name %>">
	<div id="banner">
		<%= image_tag("logo.png") %>
		<%= @page_title || "Pragmatic Bookshelf" %>
	</div>
	<div id="colums">
		<div id="side">
			<ul>
				<li><a href="http://www....">Home</a></li>
				<li><a href="http://www..../faq">Вопросы</a></li>
				<li><a href="http://www..../news">Новости</a></li>
				<li><a href="http://www..../contact">Контакты</a></li>
				
			</ul>
			<div id="time">
			<%= @time %>
			<%= @inc %>
			</div>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>


</body>
</html>

